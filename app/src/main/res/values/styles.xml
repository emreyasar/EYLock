<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TextView Styles -->
    <style name="TextStyle" parent="android:style/Widget.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/ubuntu_r</item>
        <item name="fontFamily">@font/ubuntu_r</item>
    </style>

    <style name="TextStyle.14">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextStyle.18">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextStyle.20">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextStyle.22">
        <item name="android:textSize">22dp</item>
    </style>


    <!-- Bold TextView Styles -->

    <style name="TextStyle.Bold">
        <item name="android:fontFamily">@font/ubuntu_b</item>
        <item name="fontFamily">@font/ubuntu_b</item>
    </style>

    <style name="TextStyle.Bold.14">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextStyle.Bold.18">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextStyle.Bold.20">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextStyle.Bold.22">
        <item name="android:textSize">22dp</item>
    </style>

</resources>
